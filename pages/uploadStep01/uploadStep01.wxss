@import "../uploadStep1/uploadStep1.wxss";
.cu-bar{
  color: rgb(136,136,136);
  font-size: 26rpx;
}
.cu-bar.tips{
  color: rgb(173, 173, 173);
  font-size: 24rpx;
}
.cu-item{
  font-size: 28rpx;
}
.action{
  margin-right: 20rpx;
}
.cu-list.menu>.cu-item.arrow{
  padding-right: 60rpx;
}
checkbox .wx-checkbox-input::before{
  display: block;
  content: ''
}
checkbox .wx-checkbox-input{
  width: 38rpx;
  height: 38rpx;
}
.checkbox checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border-color:  #0060e4
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  font-size: 36rpx;
}
checkbox[checked]::before {
  content: ""!important;
}
checkbox::before{
  transition: none
}

radio .wx-radio-input::before{
  display: block;
  content: ''
}
radio .wx-radio-input{
  width: 38rpx;
  height: 38rpx;
}
radio .wx-radio-input.wx-radio-input-checked{
  border-color:  #0060e4
}
radio .wx-radio-input.wx-radio-input-checked::before{
  font-size: 32rpx;
}
radio[checked]::before {
  content: ""!important;
}
radio::before{
  transition: none
}

.cu-list.menu .action .cu-btn{
  height: 60rpx;
  line-height: 60rpx;
}
.action text{
  line-height: 1
}
.bottom-modal-flex{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.bottom-modal-container{
  max-height: 500rpx;
  overflow-y: auto;
}

.step1-textarea{
  height: 180rpx;
}
.step1-textarea textarea{
  width: 100%;
  height: 100%
}

.houseImg{
  width: 150rpx;
  height: 117rpx;
}
.houseIcon{
  width: 30rpx;
  height: 30rpx;
}
.houseContent{
  width: calc(100% - 80rpx - 170rpx)
}