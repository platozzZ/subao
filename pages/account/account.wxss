.box {
  padding-bottom: 230rpx;
}
.account-padding{
  padding: 0 96rpx;
  line-height: 36rpx;
  color: rgb(153,153,153);
}
.account-image view,.account-image view image{
  width: 40rpx;
  height: 40rpx;
}
.account-image view{
  margin: 20rpx 17rpx;
}
.logintime{
  line-height: 24rpx;
}
.modal-input{
  display: flex;
  align-items: center;
  text-align: left;
  padding: 0 20rpx 0 0;
  border: 1rpx solid rgb(206,206,206);
  border-radius: 4rpx;
  margin: 0 auto 40rpx;
  background: rgb(249 ,249 ,249);
  height: 70rpx;
}
.modal-input image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.modal-input input{
  flex: 1;
}
.modal-input.only{
  margin-bottom: 0
}
.verifyImage{
  text-align: center;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}
.verifyImage image{
  width: 100%;
  max-width: 420rpx;
  height: auto;
  max-height: 120rpx;
}
.verifyImage.text-magi{
  line-height: 60rpx;
  /* background: rgb(237,237,237); */
  border-radius: 4rpx;
}
.verifyImage.text-magi .icon-refresh{
  margin: 0 20rpx;
}
.verifyImage+.modal-input{
  padding: 0 20rpx;
}
.cu-list.menu{
  /* border-top: 0.5rpx solid #ddd; */
}
.cu-list.menu>.cu-item{
  padding: 30rpx;
  min-height: 153rpx;
}
.cu-list.menu>.cu-item .action .cu-btn{
  margin-left: 20rpx;
}
.cu-list.menu>.cu-item .content .flex{
  display: flex;
  align-items: center;
}
.cu-list.menu>.cu-item .content .flex .accountImage{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.cu-list.menu>.cu-item .action .cu-btn{
  height: 50rpx;
} 
