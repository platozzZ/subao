.cu-bar{
  color: rgb(136,136,136);
  font-size: 26rpx;
}
.box{
  padding-bottom: 170rpx;
}
.cu-form-group{
  position: relative;
}
.cu-form-group .textarea{
  margin: 32rpx 0 70rpx;
  height: 4.8em;
  width: 100%;
  line-height: 1.2em;
  flex: 1;
  font-size: 28rpx;
  padding: 0;
  box-sizing: content-box;
  display: inline-block;
  vertical-align: top;
  overflow: scroll;
}
.textareaTips{
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: right;
  font-size: 28rpx;
  color: rgb(178,178,178);
}