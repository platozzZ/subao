radio .wx-radio-input::before{
  display: block;
  content: ''
}
radio .wx-radio-input{
  width: 30rpx;
  height: 30rpx;
}
radio .wx-radio-input.wx-radio-input-checked{
  border-color:  #0060e4
}
radio .wx-radio-input.wx-radio-input-checked::before{
  font-size: 22rpx;
}
radio[checked]::before {
  content: ""!important;
}
radio::before{
  transition: none
}

