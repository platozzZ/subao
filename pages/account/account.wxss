.cu-list>.cu-item .move {
  width: 200rpx;
}
.cu-list>.cu-item.move-cur {
  transform: translateX(-200rpx);
}
.cu-list>.cu-item .move button {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height:100%;
}

