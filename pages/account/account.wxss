.bottom-modal-flex{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.hide-modal{
  flex: 1;
}
.cu-modal.bottom-modal .action{
  font-size: 38rpx;
  color: rgb(43 ,43 ,43 );
}
