.box{
  padding-bottom: 170rpx;
}
.cu-form-group picker .picker{
  height: 100%;
}
.box.cu-list.menu>.cu-item .content{
  font-size: 28rpx;
  text-align: right;
  height: 100rpx;
  line-height: 100rpx;
  /* font-weight: 600; */
}
.box.cu-list.menu>.cu-item.arrow .content{
  padding-right: 70rpx;
}
.cu-list.menu>.cu-item::after {
  width: calc(100% - 30rpx);
  height: 100%;
  left: 30rpx;
  transform: scale(1);
  border-bottom: 0.5rpx solid rgba(221, 221, 221,.5);

}
.cu-list.menu>.cu-item.no-border::after {
  display: none;
}
.cu-list.menu>.cu-item.arrow{
  padding-right: 0;
}
.cu-list.menu>.cu-item .action{
  color: rgb(92,92,92);
}
.text-173{
  color: rgb(173, 173, 173);
} 
.cu-dialog .cu-bar{
  border-bottom: 0.5rpx solid rgba(221, 221, 221,.5);
}
.cu-dialog .cu-bar .action{
  width: auto;
  padding: 0 30rpx;
}
.cu-dialog .cu-bar .title{
  font-size: 38rpx;
}
.cu-dialog .cu-item .content{
  text-align: left;
  font-size: 28rpx;
  color: rgb(92,92,92);
}
.stepperNum{
  margin: 0 30rpx;
  min-width: 30rpx;
  text-align: center;
  line-height: 34rpx;
}
.stepperHanel image{
  width: 34rpx;
  height: 34rpx;
}
